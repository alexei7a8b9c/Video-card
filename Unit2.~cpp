//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------


void __fastcall TForm2::Button1Click(TObject *Sender)
{
  Form1->ADOTable1->Edit();
  Form1->ADOTable1->FieldByName("Videocard")->AsString=Form2->Edit1->Text;
  Form1->ADOTable1->FieldByName("Kol")->AsString=Form2->Edit2->Text;
  Form1->ADOTable1->FieldByName("Cena")->AsString=Form2->Edit3->Text;
  Form1->ADOTable1->FieldByName("Interface")->AsString=Form2->Edit4->Text;
  Form1->ADOTable1->FieldByName("Proizv_graf_processora")->AsString=Form2->Edit5->Text;
  Form1->ADOTable1->FieldByName("Graf_processor")->AsString=Form2->Edit6->Text;
  Form1->ADOTable1->FieldByName("Chastota_graf_processora")->AsString=Form2->Edit7->Text;
  Form1->ADOTable1->FieldByName("Kol_potok_processov")->AsString=Form2->Edit8->Text;
  Form1->ADOTable1->FieldByName("Obiem_videopamiati")->AsString=Form2->Edit9->Text;
  Form1->ADOTable1->FieldByName("Tip_videopam")->AsString=Form2->Edit10->Text;
  Form1->ADOTable1->FieldByName("Chastota_pamiati")->AsString=Form2->Edit11->Text;
  Form1->ADOTable1->FieldByName("Shirina_shini_pamiati")->AsString=Form2->Edit12->Text;
  Form1->ADOTable1->FieldByName("DirectX")->AsString=Form2->Edit13->Text;
  Form1->ADOTable1->FieldByName("Mosnost_bloka_pit")->AsString=Form2->Edit14->Text;
  Form1->ADOTable1->FieldByName("Garantia")->AsString=Form2->Edit15->Text;
  //Form1->ADOTable1->FieldByName("Others")->AsString=Form2->ListBox1->Text;
  Form1->ADOTable1->Post();
  Form2->Close();
}
//---------------------------------------------------------------------------
